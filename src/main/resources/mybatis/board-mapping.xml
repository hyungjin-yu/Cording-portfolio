<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.boardMapper">

	<!-- 목록보기 --> 
	<select id="boardList" parameterType="java.util.Map" resultType="dto">
		<![CDATA[
		select seq, id, name, subject, content, hit, to_char(logtime, 'YYYY.MM.DD')as logtime from
		 (select rownum rn, tt.* from (select * from board order by seq desc) tt) where rn>=#{startNum} and rn<=#{endNum}
		]]>
	</select>
	
	<!-- 총 데이터 수 구하기 --> 
	<select id="getTotalA" resultType="int">
		select count(*) as cnt from board
	</select>
	
	<!-- 상세보기 --> 
	<select id="boardView" parameterType="int" resultType="seq">
		select * from board where seq=#{seq}
	</select>
	
	<!-- 데이터 저장 --> 
	<select id="boardWrite" parameterType="dto">
		insert into score values(#{studNo}, #{name}, #{kor}, #{eng}, #{mat}, #{tot}, #{avg}, sysdate)
	</select>
	
	<!-- 데이터 삭제 --> 
	<select id="boardDelete" parameterType="int">
		delete board where seq=#{seq}
	</select>
	
	<!-- 성적 수정 --> 
	<select id="boardModify" parameterType="int">
		update board set subject = #{subject}, content = #{content} where seq = #{seq}
	</select>
	
	<!-- 조회 수 증가 --> 
	<select id="updateHit" parameterType="int">
		update board set hit = hit+1 where seq=#{seq}
	</select>
</mapper>